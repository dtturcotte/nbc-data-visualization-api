{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"allowJs": true,
		"strict": false,
		"incremental": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "migrations"]
}
